@{
    ViewBag.Title = "RoomList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="OrderController">
    <div class="fullscreenDiv" ng-show="IsLoadingPage">
        <div class="center">
            <i class="fa fa-circle-o-notch fa-5x fa-spin" aria-hidden="true" style=""></i>
        </div>
    </div>
    <section class="content-header">
        <h1>
            Danh sách phòng
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li class="active">Danh sách đặt phòng</li>
        </ol>
    </section>
    <section class="content">

        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Form Element sizes -->
                <div class="box box-success" ng-init="Search(1, 1)">
                    <div class="box-header with-border">
                        <h3 class="box-title">Phòng trống</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-3 col-sm-6 col-xs-12" ng-repeat="it in lstRoomFree" ng-click="ViewOrderDetail(it)" style="cursor:pointer">
                            <div class="info-box bg-aqua">
                                <span class="info-box-icon">{{it.ID}}</span>
                                <div class="info-box-content">
                                    <span class="info-box-text"> {{it.QUANTITY}} x <i class="fa fa-bed" aria-hidden="true"></i></span>
                                    <span class="info-box-number">[Phòng trống]</span>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 50%"></div>
                                    </div>
                                    <span class="progress-description">
                                        <i>Click để tạo phòng</i>
                                    </span>
                                </div><!-- /.info-box-content -->
                            </div><!-- /.info-box -->
                        </div>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                <div class="box box-danger" ng-init="Search(2, 1)">
                    <div class="box-header with-border">
                        <h3 class="box-title">Phòng đang có khách</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-3 col-sm-6 col-xs-12" ng-repeat="it in lstRoomBusy" ng-click="ViewOrderDetail(it)" style="cursor:pointer">
                            <div class="info-box bg-red">
                                <span class="info-box-icon">{{it.ID}}</span>
                                <div class="info-box-content">
                                    <span class="info-box-text"> {{it.QUANTITY}} x <i class="fa fa-bed" aria-hidden="true"></i></span>
                                    <span class="info-box-number">{{it.TOTALPRODUCT + it.TOTALROOM | number:0 }}đ</span>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 50%"></div>
                                    </div>
                                    <span class="progress-description">
                                        <b>{{it.CUSTOMERNAME}}</b>
                                    </span>
                                </div><!-- /.info-box-content -->
                            </div><!-- /.info-box -->
                        </div>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
                <div class="box box-warning " ng-init="Search(3, 1)">
                    <div class="box-header with-border">
                        <h3 class="box-title">Phòng đang dọn</h3>
                    </div>
                    <div class="box-body">
                        <div class="col-md-3 col-sm-6 col-xs-12" ng-repeat="it in lstRoomCleanning" ng-click="ViewOrderDetail(it)" style="cursor:pointer">
                            <div class="info-box bg-yellow">
                                <span class="info-box-icon">{{it.ID}}</span>
                                <div class="info-box-content">
                                    <span class="info-box-text"> {{it.QUANTITY}} x <i class="fa fa-bed" aria-hidden="true"></i></span>
                                    <span class="info-box-number">[Đang dọn]</span>
                                    <div class="progress">
                                        <div class="progress-bar" style="width: 50%"></div>
                                    </div>
                                    <span class="progress-description">
                                        <i>Click để tạo phòng</i>
                                    </span>
                                </div><!-- /.info-box-content -->
                            </div><!-- /.info-box -->
                        </div>



                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!--/.col (left) -->

        </div>   <!-- /.row -->
    </section>
</div>
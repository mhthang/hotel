<div class="passwordBox animated fadeInDown" ng-controller="AccountChangePasswordCtrl">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold">Change password</h2>
                <p>
                    Forgot password confirmation successfully. <br /> Please type your new password.
                </p>
                <ngspinner name="spinner_signin_loading" show="processing"></ngspinner>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="m-t" role="form" ng-submit="changePassword()">
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Old password" required="" ng-model="ChangePasswordBindingModel.OldPassword">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="New password" required="" ng-model="ChangePasswordBindingModel.NewPassword">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Confirm new password" required="" ng-model="ChangePasswordBindingModel.ConfirmNewPassword">
                            </div>
                            <button type="submit" class="btn btn-primary block full-width m-b" ng-disabled="btnSubmitDisable">Change password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Copyright Octolium Company
        </div>
        <div class="col-md-6 text-right">
            <small>© 2016-2017</small>
        </div>
    </div>
</div>


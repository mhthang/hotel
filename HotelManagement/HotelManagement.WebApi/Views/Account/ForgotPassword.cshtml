<div class="passwordBox animated fadeInDown" ng-controller="AccountForgotPasswordCtrl">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold">Forgot password</h2>
                <p>
                    Enter your email address. <br /> The confirm forgot password will be emailed to you.
                </p>
                <ngspinner name="spinner_signin_loading" show="processing"></ngspinner>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="m-t" role="form" ng-submit="sendMail()">
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Email address" required="" ng-model="ForgotPasswordBindingModel.Email">
                            </div>
                            <div class="form-group">
                                <div vc-recaptcha ng-model="" key="'6LfvEhEUAAAAAA1aS5yVVw8C47OS6zjbHq9bQ1ft'" on-expire="cbExpiration()"></div>
                            </div>
                            <button type="submit" class="btn btn-primary block full-width m-b" ng-disabled="btnSendDisable">Send</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Copyright Octolium Company
        </div>
        <div class="col-md-6 text-right">
            <small>© 2016-2017</small>
        </div>
    </div>
</div>


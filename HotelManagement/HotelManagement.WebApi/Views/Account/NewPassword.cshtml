<div class="passwordBox animated fadeInDown" ng-controller="AccountNewPasswordCtrl">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox-content">
                <h2 class="font-bold">New Password</h2>
                <p>
                    Forgot password confirmation successfully. <br /> Please type your new password.
                </p>
                <ngspinner name="spinner_signin_loading" show="processing"></ngspinner>
                <div class="row">
                    <div class="col-lg-12">
                        <form class="m-t" role="form" ng-submit="newPassword()">
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="New password" required="" ng-model="NewPasswordBindingModel.NewPassword">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Confirm new password" required="" ng-model="NewPasswordBindingModel.ConfirmNewPassword">
                            </div>
                            <div class="form-group">
                                <div vc-recaptcha ng-model="" key="'6LfvEhEUAAAAAA1aS5yVVw8C47OS6zjbHq9bQ1ft'" on-expire="cbExpiration()"></div>
                            </div>
                            <button type="submit" class="btn btn-primary block full-width m-b" ng-disabled="btnSubmitDisable">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Copyright Octolium Company
        </div>
        <div class="col-md-6 text-right">
            <small>© 2016-2017</small>
        </div>
    </div>
</div>


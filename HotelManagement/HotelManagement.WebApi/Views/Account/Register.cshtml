<div class="middle-box text-center loginscreen animated fadeInDown wr_logo_log_reg" ng-init="onload()">
    <div>
        <div>
            <h3 class="logo-name">OCTOLIUM</h3>
        </div>
        <ngspinner name="spinner_register_loading" show="loading || processing"></ngspinner>
        <h3>{{ 'REGISTER_TITLE' | translate }} <strong>{{ 'REGISTER_SUB_TITLE_2' | translate }}</strong></h3>
        <p>{{ 'REGISTER_SUB_TITLE' | translate }}</p>
        <form name="myForm" class="m-t" role="form">
            <div class="form-group" ng-show="!processing && ErrorMessage != null">
                <div class="alert alert-danger text-left">
                    <span ng-bind-html="ErrorMessage"></span>
                </div>
            </div>
            <div class="alert alert-danger" ng-show="IsInitFormError">
                {{ 'GENERAL_ERROR_MESSAGE_1' | translate }}<br />{{ 'GENERAL_HELP_CONTACT_MESSAGE' | translate }}. <a class="alert-link" ui-sref="login">help@aegona.com</a>.
            </div>
            <div class="alert alert-danger" ng-show="IsLogginFormError">
                {{ 'GENERAL_ERROR_MESSAGE_1' | translate }}<br />Your account has been successfully created but the system could not sign you in at the moment.<br />Please go to <a class="alert-link" ui-sref="login">login</a> to sign in.
            </div>
            @*<div class="form-group">
                    <input type="text" class="form-control" placeholder="{{ 'GENERAL_FULLNAME' | translate }}" ng-model="CreateUserBindingModel.FirstName" required="">
                </div>*@
            <div class="form-group">
                <input type="email" class="form-control" placeholder="{{ 'GENERAL_EMAIL' | translate }}" ng-model="CreateUserBindingModel.Email" required="">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" placeholder="{{ 'GENERAL_PASSWORD' | translate }}" ng-model="CreateUserBindingModel.Password" required="">
            </div>
            @*<div class="form-group">
                    <select class="form-control" ng-model="CreateUserBindingModel.CountryCode" ng-options="country.CountryCode as country.CountryName for country in Countries"></select>
                </div>*@
            <div class="form-group">
                <div class="checkbox i-checks"><label> <input type="checkbox" ng-model="CreateUserBindingModel.IsAcceptTerm" required=""><i></i> {{ 'REGISTER_TERM_AND_POLICY' | translate }} </label></div>
            </div>
            <div class="form-group">
                <div vc-recaptcha ng-model="gRecaptchaResponse" key="'6LfvEhEUAAAAAA1aS5yVVw8C47OS6zjbHq9bQ1ft'" on-expire="cbExpiration()"></div>
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b" ng-click="myForm.$valid && createNewUser()">{{ 'GENERAL_REGISTER' | translate }}</button>
            <p class="text-muted text-center"><small>{{ 'REGISTER_ALREADY_HAVE_AN_ACCOUNT' | translate }}</small></p>
            <a class="btn btn-sm btn-white btn-block" ui-sref="login">{{ 'GENERAL_LOGIN' | translate }}</a>
        </form>
        <p class="m-t"> <small>{{ 'BOTTOM_TEXT_COMPANY_NAME' | translate }} &copy; {{ 'BOTTOM_TEXT_COPY_RIGHT' | translate }}</small> </p>
    </div>
</div>
